<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light.NoTitleBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- Header style declarations  -->
    <style name="HeaderLogo">
    	<item name="android:paddingTop">15dp</item>
    	<item name="android:paddingBottom">15dp</item>
    	<item name="android:background">#f2f2f2</item>
	</style>

    <style name="TotalCostLayout">
		<item name="android:paddingLeft">10dp</item>
		<item name="android:paddingBottom">10dp</item>
    	<item name="android:paddingRight">10dp</item>
        <item name="android:background">@drawable/totalcost_background</item>
	</style>

    <style name="ShowPaymentDetailsImage">
    	<item name="android:paddingLeft">10dp</item>
    	<item name="android:paddingTop">10dp</item>
	</style>

    <style name="TotalCostDetailsLayout">
		<item name="android:paddingTop">10dp</item>
		<item name="android:paddingBottom">0dp</item>
		<item name="android:paddingRight">0dp</item>
		<item name="android:paddingLeft">0dp</item>
	</style>

    <style name="TotalCostLayoutText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="TotalCostLayoutTextBold" parent="@style/TotalCostLayoutText">
		<item name="android:textStyle">bold</item>
    </style>

    <style name="TotalCostLayoutSmallText" parent="@style/TotalCostLayoutText">
		<item name="android:textSize">17sp</item>
    </style>

    <style name="SecureMessage">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#00AF00</item>
        <item name="android:paddingRight">14dp</item>
    </style>

    <style name="SecureMessageIcon">
        <item name="android:paddingRight">5dp</item>
    </style>

    <!-- Paymentproduct selection style declarations -->
    <style name="ListHeaderText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>
    	<item name="android:paddingLeft">15dp</item>
    	<item name="android:paddingBottom">15dp</item>
    	<item name="android:paddingTop">15dp</item>
    </style>

    <style name="ListViewTextView">
    	<item name="android:textSize">20sp</item>
    	<item name="android:paddingTop">15dp</item>
    	<item name="android:paddingLeft">10dp</item>
    	<item name="android:paddingRight">30dp</item>
    	<item name="android:paddingBottom">15dp</item>
	</style>

    <style name="listViewRowPaymentProductLogo">
        <item name="android:layout_marginTop">5dp</item>
	</style>

    <style name="ListViewRowButtonNext">
    	<item name="android:paddingTop">13dp</item>
    	<item name="android:paddingRight">1dp</item>
	</style>

    <!-- BanContact/Afterpay text style declarations -->
    <style name="ActivitySpecialHeaderStyle">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ProcessingActivityRegularStyle">
        <item name="android:textSize">18sp</item>
    </style>

	<!-- Paymentscreen style declarations -->
	<style name="WhiteLayout">
        <item name="android:background">#FFFFFF</item>
   	</style>

    <style name="RenderInputFieldsLayout">
        <item name="android:paddingLeft">14dp</item>
    	<item name="android:paddingRight">14dp</item>
   	</style>

    <style name="TextField">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20sp</item>
    	<item name="android:paddingTop">15dp</item>
    	<item name="android:paddingLeft">10dp</item>
    	<item name="android:paddingRight">10dp</item>
    	<item name="android:paddingBottom">15dp</item>
   	</style>

    <style name="RememberMeCheckbox">
       <item name="android:layout_marginLeft">10dp</item>
   	</style>

    <style name="PrimaryButton" parent="@android:style/TextAppearance.Widget.Button">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_margin">14dp</item>
 	</style>

    <style name="SecondaryButton" parent="@android:style/TextAppearance.Widget.Button">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_margin">14dp</item>
    </style>

    <style name="CancelButton" parent="SecondaryButton">
		<item name="android:background">@android:color/transparent</item>
 	</style>

    <style name="InactivePayButton" parent="PrimaryButton">
        <item name="android:background">@drawable/inactive_button_background</item>
    </style>

    <style name="ActivePayButton" parent="PrimaryButton">
        <item name="android:background">@drawable/active_button_background</item>
 	</style>

    <style name="ErrorMessage" >
		<item name="android:textColor">#ff3333</item>
 	</style>

    <style name="IinCoBrandNotification" >
        <item name="android:textColor">#000000</item>
    </style>

    <style name="sectionBackground" >
        <item name="android:background">@drawable/special_section_background</item>
        <item name="android:layout_margin">14dp</item>
    </style>

    <!-- Footer style declarations -->
    <style name="FooterLayout">
        <item name="android:background">#f2f2f2</item>
        <item name="android:paddingBottom">15dp</item>
	</style>

    <style name="FooterText">
    	<item name="android:textSize">15sp</item>
        <item name="android:textColor">#030303</item>
        <item name="android:layout_marginTop">6dp</item>
	</style>

    <!-- android Pay style declarations -->
    <style name="WalletFragmentDetailsTextAppearance">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="WalletFragmentDetailsHeaderTextAppearance"
        parent="WalletFragmentDetailsTextAppearance">
        <item name="android:textStyle">bold</item>
    </style>

</resources>