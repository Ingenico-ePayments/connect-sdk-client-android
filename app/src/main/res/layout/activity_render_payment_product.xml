<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
	<LinearLayout
	    android:id="@+id/paymentProductRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
		android:background="@drawable/payment_product_background"
        android:clickable="true"
        android:onClick="onPaymentProductSelected" >
        
    	<ImageView
    	    android:id="@+id/paymentProductLogo"
	   	    android:layout_width="75dp"
    	    android:layout_height="50dp"
    	    android:layout_marginLeft="15dp" 
    	    style="@style/listViewRowPaymentProductLogo" />

        <TextView
        	android:id="@+id/paymentProductName"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
	       	style="@style/ListViewTextView" />
        
         <ImageView
		       android:id="@+id/listViewRowButtonNext"
		       android:layout_width="match_parent"
		       android:layout_height="wrap_content"
		       android:layout_weight="2"
		       android:src="@drawable/ic_action_next_item"
		       style="@style/ListViewRowButtonNext" />
    	
	</LinearLayout>
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:scaleType="fitXY"
        android:src="@drawable/line" />
 
</LinearLayout >